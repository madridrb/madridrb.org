%header.navigation
  .menu-wrapper
    = link_to root_url, class: :logo, title: 'Madrid.rb' do
      = image_tag 'rubito.png', alt: 'rubito'
    %p#js-mobile-menu.navigation-menu-button MENU

    .nav
      %ul#navigation-menu
        %li.nav-link
          = link_to 'Meetings', meetings_path
        %li.nav-link
          = link_to 'Users', users_path
        %li.nav-link
          %a{href: "javascript:void(0)"} About
        %li.nav-link
          %a{href: "javascript:void(0)"} Contact
        %li.nav-link.more
          %a{href: "javascript:void(0)"} More
          %ul.submenu
            %li
              %a{href: "javascript:void(0)"} About
            %li
              %a{href: "javascript:void(0)"} Contact us

    .navigation-tools
      .search-bar
        .search-and-submit
          %input{placeholder: "Enter Search", type: "search"}/
          %button{type: "submit"}
            %img{alt: "", src: "https://raw.githubusercontent.com/Magnus-G/Random/master/search-icon.png"}/
      - if user_logged_in?
        = link_to 'Log out', session_path, method: :delete, id: 'log-out', class: :login
        = link_to current_user.name, current_user, class: :login
      - else
        = link_to 'Sign up', new_user_path, class: 'sign-up', id: 'sign-up'
        = link_to 'Log in', new_session_path, class: :login, id: 'log-in'


