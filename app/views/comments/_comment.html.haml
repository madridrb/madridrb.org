.comment
  .comment-image
    = gravatar_tag comment.user
  .comment-content
    %h1= comment.user_name
    %p= markdown comment.body
    %p.comment-detail= distance_of_time_in_words_to_now comment.created_at

    - if policy(comment).destroy?
      %p= link_to 'Delete', meeting_comment_path(meeting, comment_counter), method: :delete
