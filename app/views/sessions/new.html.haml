%fieldset.single
  %h1 Madrid.rb

  = form_tag session_path do
    %p
      = label_tag :email
      = email_field_tag :email, nil, require: true, placeholder: 'username@example.com'
    %p
      = label_tag :password
      = password_field_tag :password, nil, require: true

    %p
      = submit_tag t('.submit'), id: 'submit'
      = link_to t('.forgot_password'), new_reset_password_path, id: 'forgot-password'
